{h2 [Customize Theorem Units]}
{global, compile-with remark, warning []}
{two [
    {display [Source]}
    {display [Result]}
    {lang stdn, code [
        '{global, compile-with remark, warning []}'
        '{warning [This unit is compiled by the unit compiler of remark.]}'
    ]}
    {warning [This unit is compiled by the unit compiler of remark.]}
]}
[]
{h2 [Change Level]}
{global, level 2, test []}
{two [
    {display [Source]}
    {display [Result]}
    {lang stdn, code [
        '{global, level 2, test []}'
        '{orbit test, equation [{display, \'\int_0^\infty e^{-x^2}dx=\frac{\sqrt\pi}2\'}]}'
        '{orbit test, level 3, equation [{display, \'\int_0^\infty e^{-x^2}dx=\frac{\sqrt\pi}2\'}]}'
    ]}
    {div [
        {orbit test, equation [{display, '\int_0^\infty e^{-x^2}dx=\frac{\sqrt\pi}2'}]}
        {orbit test, level 3, equation [{display, '\int_0^\infty e^{-x^2}dx=\frac{\sqrt\pi}2'}]}
    ]}
]}
